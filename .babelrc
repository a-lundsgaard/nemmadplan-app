{
    "plugins": [
        [
            "module-resolver",
            {
                "cwd": "babelrc",                
                "alias": {
                    "Constants": "./app/src/constants",
                    "Components": "./app/src/components",
                    "Core": "./app/src/core",
                    "Pages": "./app/src/pages",
                    "Redux": "./app/src/redux",
                    "I18n": "./app/localization"
                }
            }
        ],
        [
            "@babel/plugin-proposal-class-properties",
            {
              "loose": true // for using some experimental js syntaxes
            }
          ]
    ],
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
    ]
}